<div class="row mt-4">
  <div class="col-md-6 col-md-offset-6">
    <div>
      <%=image_tag profile.decorate.check_avatar, class: 'rounded-circle img-fluid mx-auto d-block', size: '200x200' %> 
    </div>
   <div class="mt-3 col-md-5 col-md-offset-5" style="width: 100%">
     <%= profile.grade%>期
   </div>
   <div class="row d-flex justify-content-center">
     <div class="profile-name">
       <%= profile.name %> 
     </div>
     <div class="mx-2 sns-icon">
       <i class="fa-brands fa-twitter" style="color: deepskyblue;"></i>
     </div>
     <div class="mx-2 sns-icon">
       <i class="fab fa-github mr-2"></i>
     </div>
   </div>
    <button type="button" class="btn btn-primary d-flex justify-content-center favorite-btn">
      <p>いいね！</p>
      <%= image_tag 'hiyoco.png', size: '20x20'%>
    </button>
  </div>
  <div class="mb-5 col-md-5 col-md-offset-5 self-introduce">
    <div class="col">
      <p>自己紹介文</p> 
    </div>
    <div class="col text-input-area self-introduce">
      <%= profile.self_introduce %> 
    </div>
  </div>
</div>
  <div class="mb-3 mt-5 row">
    <div class="col-md-6 col-md-offset-6">
      <%= (t 'activerecord.attributes.profile.birthplace')%>
    </div>
    <div class="col-md-5 col-md-offset-5">
      <p class="text-input-area"><%= profile.birthplace.name %></p>
    </div>
  </div>
<div class="mb-3 row">
  <div class="col-md-6 col-md-offset-6">
    <%= (t 'activerecord.attributes.profile.living_place')%>
  </div>
  <div class="col-md-5 col-md-offset-5">
    <p class="text-input-area"><%= profile.living_place.name %></p>
  </div>
</div>
<div class="mb-3 row">
  <div class="col-md-6 col-md-offset-6">
    <%= (t 'activerecord.attributes.profile.gender')%>
  </div>
  <div class="col-md-5 col-md-offset-5">
    <p class="text-input-area"><%= profile.gender_i18n %></p>
  </div>
</div>
<div class="mb-3 row">
  <div class="col-md-6 col-md-offset-6">
    <%= (t 'activerecord.attributes.profile.date_of_birth')%>
  </div>
  <div class="col-md-5 col-md-offset-5">
    <p class="text-input-area"> <%= profile.date_of_birth%></p>
  </div>
</div>
<div class="mb-3 row">
  <div class="col-md-6 col-md-offset-6">
    <%= (t 'activerecord.attributes.profile.blood_type')%>
  </div>
  <div class="col-md-5 col-md-offset-5">
    <p class="text-input-area"> <%= profile.blood_type_i18n  %></p>
  </div>
</div>
<div class="mb-3 row">
  <div class="col-md-6 col-md-offset-6">
    <%= (t 'activerecord.attributes.profile.siblings_relation')%>
  </div>
  <div class="col-md-5 col-md-offset-5">
    <p class="text-input-area">  <%= profile.siblings_relation_i18n %></p>
  </div>
</div>
<div class="mb-3 row">
  <div class="col-md-6 col-md-offset-6">
    <%= (t 'activerecord.attributes.profile.hobby')%>
  </div>
  <div class="col-md-5 col-md-offset-5">
    <p class="text-input-area"> <%= profile.hobby %></p>
  </div>
</div>
<div class="mb-3 row">
  <div class="col-md-6 col-md-offset-6">
    <%= (t 'activerecord.attributes.profile.times_name')%>
  </div>
  <div class="col-md-5 col-md-offset-5">
    <p class="text-input-area">
      <%= profile.times_name %>
    </p>
  </div>
</div>
<div class="mb-3 row">
  <div class="col-md-6 col-md-offset-6">
    <%= (t 'activerecord.attributes.profile.team_dev_will')%>
  </div>
  <div class="col-md-5 col-md-offset-5">
    <p class="text-input-area">
      <%= profile.team_dev_will_i18n %>
    </p>
  </div>
</div>
<div class="mb-3 row">
  <div class="col-md-6 col-md-offset-6">
    <%= (t 'activerecord.attributes.profile.twitter_account')%>
  </div>
  <div class="col-md-5 col-md-offset-5">
    <p class="text-input-area">
      <%= profile.twitter_account %>
    </p>
  </div>
</div>
<% portfolio.each do |pf|%>
  <div class="mb-3 row"> 
    <div class="col-md-6 col-md-offset-6">
      <%= (t 'activerecord.attributes.portfolio.name')%>
    </div>
    <div class="col-md-5 col-md-offset-5">
      <p class="text-input-area">  
        <%= pf.name %>
      </p>
    </div>
  </div>
  <div class="mb-3 row">
    <div class="col-md-6 col-md-offset-6">
      <%= (t 'activerecord.attributes.portfolio.url')%>
    </div>
    <div class="col-md-5 col-md-offset-5 ">
      <p class="text-input-area"><%= pf.url %></p>
    </div>
  </div>
  <div class="mb-3 row">
    <div class="col-md-6 col-md-offset-6">
       <%= (t 'activerecord.attributes.portfolio.status')%>
    </div>
    <div class="col-md-5 col-md-offset-5">
      <p class="text-input-area"><%= pf.status_i18n %></p>
    </div>
  </div>   
<%end%>
<div>
  <%=link_to '編集',edit_profile_path, class: 'mt-4 btn btn-warning edit-btn' %> 
</div>