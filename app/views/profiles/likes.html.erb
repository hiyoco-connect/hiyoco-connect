<div class="container-fluid">
  <div class="col-10 offset-1 py-5">
    <div class="row">
      <h2><%= t '.connect' %></h2>
      <% if @connect_profiles.present? %>
        <%= render @connect_profiles %>
      <% else %>
        <p><%= t '.connect_profile_not_found_message' %></p>
      <% end %>
      <h2><%= t '.like' %></h2>
      <% if @liked_profiles.present? %>
        <%= render @liked_profiles %>
      <% else %>
        <p><%= t '.like_profile_not_found_message' %></p>
      <% end %>
      <% if current_user.profile.present? && @passive_liked_profiles.present?%>
        <h2>いいね！してくれたユーザー</h2>
        <%= render @passive_liked_profiles %>
      <% end %>
    </div>
  </div>
</div>
