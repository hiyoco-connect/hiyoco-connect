<ul class='crud-menu-btn list-inline float-right'>
  <li class="list-inline-item">
    <%= link_to edit_profile_path(profile), id: "button-edit-#{profile.id}" do %>
      <i class="fas fa-pen" style="color: black;"></i>
    <% end %>
  </li>
  <li class="list-inline-item">
    <%= link_to profile_path(profile), id: "button-delete-#{profile.id}", method: :delete, data: { confirm: t('defaults.message.delete_confirm') } do %>
      <i class="fa fa-trash" aria-hidden="true" style="color: black;"></i>
    <% end %>
  </li>
</ul>